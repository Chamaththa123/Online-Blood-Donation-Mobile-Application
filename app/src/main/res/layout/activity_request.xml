<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Request">

    <EditText
        android:id="@+id/rname"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Enter Patient Name"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColorHint="#494949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/rgroup"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Enter Patient Blood Group"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColorHint="#494949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rname" />

    <EditText
        android:id="@+id/rnic"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Enter Patient NIC"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColorHint="#494949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgroup" />

    <EditText
        android:id="@+id/rphone"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Enter Contact Person Phone"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColorHint="#494949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rnic" />

    <EditText
        android:id="@+id/rdate"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Enter Required Date"
        android:inputType="textPersonName"
        android:paddingLeft="25dp"
        android:textColorHint="#494949"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rphone" />

    <Button
        android:id="@+id/rsave"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:layout_marginStart="96dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/input_field"
        android:backgroundTint="#F71731"
        android:text="Submit Blood Request"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.61"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="105dp"
        android:text="Add Blood Request"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/back2"
        android:layout_width="74dp"
        android:layout_height="105dp"
        android:layout_marginEnd="344dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_arrow_left_24" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="314dp"
        android:layout_height="180dp"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/download" />
</androidx.constraintlayout.widget.ConstraintLayout>